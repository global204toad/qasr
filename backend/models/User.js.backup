const mongoose = require('mongoose');
const bcrypt = require('bcryptjs');
const jwt = require('jsonwebtoken');

const userSchema = new mongoose.Schema({
  name: {
    type: String,
    required: [true, 'Name is required'],
    trim: true,
    maxlength: [50, 'Name cannot exceed 50 characters']
  },
  mobile: {
    type: String,
    required: function() {
      // Mobile is required only for local users, not OAuth users
      return this.provider === 'local';
    },
    unique: true,
    sparse: true, // Allow multiple null values for OAuth users
    match: [
      /^\+20(10|11|12|15)\d{8}$/,
      'Please enter a valid Egyptian mobile number'
    ]
  },
  email: {
    type: String,
    required: false,
    unique: false,
    sparse: true,
    lowercase: true,
    match: [
      /^[^\s@]+@[^\s@]+\.[^\s@]+$/,
      'Please enter a valid email address'
    ]
  },
  password: {
    type: String,
    required: function() {
      // Password is required only if not using OAuth
      return !this.provider;
    },
    minlength: [6, 'Password must be at least 6 characters'],
    select: false // Don't include password in queries by default
  },
  // OAuth fields
  provider: {
    type: String,
    enum: ['local', 'google', 'facebook'],
    default: 'local'
  },
  providerId: {
    type: String,
    sparse: true // Allow multiple null values
  },
  profilePicture: {
    type: String,
    default: null
  },
  role: {
    type: String,
    enum: ['user', 'admin'],
    default: 'user'
  },
  address: {
    street: String,
    city: String,
    state: String,
    zipCode: String,
    country: String
  },

  isVerified: {
    type: Boolean,
    default: function() {
      // OAuth users are automatically verified
      return this.provider !== 'local';
    }
  },
  verificationCode: {
    type: String,
    select: false // Don't include in queries by default
  },
  verificationCodeExpires: {
    type: Date,
    select: false
  },
  verificationAttempts: {
    type: Number,
    default: 0,
    select: false
  },
  resetPasswordToken: String,
  resetPasswordExpire: Date,
  createdAt: {
    type: Date,
    default: Date.now
  },
  lastLogin: {
    type: Date
  }
}, {
  timestamps: true
});

// Index for faster queries (mobile is already indexed by unique: true)
userSchema.index({ role: 1 });
userSchema.index({ provider: 1, providerId: 1 });
userSchema.index({ email: 1 }, { sparse: true });

// Hash password before saving (only for local users)
userSchema.pre('save', async function(next) {
  // Only hash the password if it has been modified (or is new) and user is local
  if (!this.isModified('password') || this.provider !== 'local') return next();
  
  try {
    // Hash password with cost of 12
    const salt = await bcrypt.genSalt(12);
    this.password = await bcrypt.hash(this.password, salt);
    next();
  } catch (error) {
    next(error);
  }
});

// Compare password method (only for local users)
userSchema.methods.comparePassword = async function(candidatePassword) {
  // OAuth users don't have passwords
  if (this.provider !== 'local') {
    throw new Error('OAuth users do not have passwords');
  }
  
  try {
    return await bcrypt.compare(candidatePassword, this.password);
  } catch (error) {
    throw new Error('Password comparison failed');
  }
};

// Remove sensitive data when converting to JSON
userSchema.methods.toJSON = function() {
  const userObject = this.toObject();
  delete userObject.password;
  delete userObject.verificationCode;
  delete userObject.verificationCodeExpires;
  delete userObject.resetPasswordToken;
  delete userObject.resetPasswordExpire;
  return userObject;
};

// Static method to find user by mobile with password
userSchema.statics.findByMobileWithPassword = function(mobile) {
  return this.findOne({ mobile }).select('+password');
};

// Static method to find user by email with password (for OAuth users)
userSchema.statics.findByEmailWithPassword = function(email) {
  return this.findOne({ email }).select('+password');
};

// Generate SMS verification code method
userSchema.methods.generateSMSVerificationCode = function() {
  // Generate 6-digit numeric code
  const code = Math.floor(100000 + Math.random() * 900000).toString();
  
  // Set verification code and expiration (5 minutes for SMS)
  this.verificationCode = code;
  this.verificationCodeExpires = Date.now() + 5 * 60 * 1000; // 5 minutes
  this.verificationAttempts = 0; // Reset attempts when new code is generated
  
  return code;
};

// Verify code method
userSchema.methods.verifyCode = function(code) {
  if (!this.verificationCode || !this.verificationCodeExpires) {
    return { success: false, error: 'NO_CODE' };
  }
  
  // Check if code is expired
  if (this.verificationCodeExpires <= Date.now()) {
    return { success: false, error: 'EXPIRED' };
  }
  
  // Check if maximum attempts exceeded
  if (this.verificationAttempts >= 5) {
    return { success: false, error: 'MAX_ATTEMPTS' };
  }
  
  // Increment attempts
  this.verificationAttempts = (this.verificationAttempts || 0) + 1;
  
  // Check if code matches
  if (this.verificationCode === code) {
    this.isVerified = true;
    this.verificationCode = undefined;
    this.verificationCodeExpires = undefined;
    this.verificationAttempts = undefined;
    return { success: true };
  }
  
  // Return remaining attempts
  const remainingAttempts = 5 - this.verificationAttempts;
  return { 
    success: false, 
    error: 'INVALID_CODE', 
    remainingAttempts,
    attemptsUsed: this.verificationAttempts
  };
};

// Static method to find user by mobile with verification code
userSchema.statics.findByMobileWithVerificationCode = function(mobile) {
  return this.findOne({ mobile }).select('+verificationCode +verificationCodeExpires +verificationAttempts');
};

// Generate JWT token method
userSchema.methods.getSignedJwtToken = function() {
  return jwt.sign({ id: this._id }, process.env.JWT_SECRET, {
    expiresIn: process.env.JWT_EXPIRE || '30d'
  });
};

// Static method to find or create OAuth user
userSchema.statics.findOrCreateOAuthUser = async function(provider, profile) {
  try {
    // First try to find by provider ID
    let user = await this.findOne({ 
      provider, 
      providerId: profile.id 
    });

    if (user) {
      // Update last login
      user.lastLogin = new Date();
      await user.save();
      return user;
    }

    // If not found by provider ID, try to find by email
    if (profile.emails && profile.emails[0]) {
      user = await this.findOne({ email: profile.emails[0].value });
      
      if (user) {
        // Link existing user to OAuth provider
        user.provider = provider;
        user.providerId = profile.id;
        user.profilePicture = profile.photos?.[0]?.value || user.profilePicture;
        user.lastLogin = new Date();
        await user.save();
        return user;
      }
    }

    // Create new user
    const newUser = new this({
      name: profile.displayName || profile.name?.givenName + ' ' + profile.name?.familyName,
      email: profile.emails?.[0]?.value,
      provider,
      providerId: profile.id,
      profilePicture: profile.photos?.[0]?.value,
      isVerified: true, // OAuth users are automatically verified
      lastLogin: new Date()
    });

    await newUser.save();
    return newUser;
  } catch (error) {
    throw error;
  }
};

module.exports = mongoose.model('User', userSchema);
